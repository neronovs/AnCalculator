<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/backgroun_metal_lines"
        android:orientation="vertical"
        android:paddingTop="15dp"
        tools:context="com.example.otc.ancalculator.MainActivity">

        <FrameLayout
            android:id="@+id/mainView_tableBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/object_back"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout_functionalBtns"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1.2">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/mainView_table"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="50sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mainView_actionBar"
                    app:layout_constraintVertical_weight="5" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/mainView_actionBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/mainView_table"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1">


                    <TextView
                        android:id="@+id/mainView_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="M"
                        android:visibility="visible"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteY="0dp" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:textSize="50sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteY="0dp">

                        <TextView
                            android:id="@+id/mainView_firstNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp" />

                        <TextView
                            android:id="@+id/mainView_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp" />

                        <TextView
                            android:id="@+id/mainView_secondNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp" />

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_marginStart="3dp"
                            android:text="="
                            android:visibility="invisible" />-->
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

        </FrameLayout>

        <TableLayout
            android:id="@+id/tableLayout_functionalBtns"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout_buttons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainView_tableBackground"
            app:layout_constraintVertical_weight="1">

            <TableRow android:orientation="vertical">

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="C"
                    android:textColor="@color/DarkKhaki"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonMPlus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="M+"
                    android:textColor="@color/DarkKhaki"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonMMinus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="M-"
                    android:textColor="@color/DarkKhaki"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonMR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="MR"
                    android:textColor="@color/DarkKhaki"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/buttonMC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="MC"
                    android:textColor="@color/DarkKhaki"
                    android:textSize="25sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout_buttons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout_functionalBtns"
            app:layout_constraintVertical_weight="5">

            <TableRow

                android:layout_weight="1">

                <Button
                    android:id="@+id/button7"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="7"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button8"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="8"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button9"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="9"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonDivide"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="÷"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="4"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button5"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="5"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="6"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonMultiply"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="×"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/button1"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="1"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="2"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="3"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonMinus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="-"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />
            </TableRow>

            <TableRow android:layout_weight="1">

                <Button
                    android:id="@+id/button0"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="0"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonDot"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="."
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonEqual"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="="
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buttonPlus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@mipmap/button_gray"
                    android:text="+"
                    android:textColor="@color/Wheat"
                    android:textSize="40sp" />
            </TableRow>

        </TableLayout>

    </android.support.constraint.ConstraintLayout>

</layout>